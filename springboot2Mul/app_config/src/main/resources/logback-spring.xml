<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <if condition='isDefined("catalina.home")'>
        <then>
            <property name="LOG_HOME" value="${catalina.home}/logs"/>
            <property name="LOG_FILE" value="${catalina.home}/logs/run.log"/>
        </then>
        <else>
            <property name="LOG_HOME" value="./logs/"/>
            <property name="LOG_FILE" value="./logs/run"/>
        </else>
    </if>
    <property name="APP_NAME" value="SPRING_TEST" />
    <property name="DEFAULT_PATTERN" value="%-5level %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread]  %logger:%line - %msg%n"></property>
    <!-- 控制台输出 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
        <!--格式化输出：%-5level：级别从左显示5个字符宽度%d表示日期，%thread表示线程名，%file:%line 文件名行号%msg：日志消息，%n是换行符-->
            <pattern>${DEFAULT_PATTERN}</pattern>
        </encoder>
    </appender>
    <!-- 按照每天生成日志文件 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <FileNamePattern>${LOG_HOME}/${APP_NAME}%d{yyyy-MM-dd}.log</FileNamePattern>
            <!--日志文件保留天数-->
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${DEFAULT_PATTERN}</pattern>
        </encoder>
        <!--日志文件最大的大小-->
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>10MB</MaxFileSize>
        </triggeringPolicy>
    </appender>

<!--    <logger name="com.lht" level="INFO" additivity="true">-->
<!--        <appender-ref ref="STDOUT"/>-->
<!--    </logger>-->
    <!-- 日志输出级别 -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>
</configuration>